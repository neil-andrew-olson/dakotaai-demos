{
  "version": 2,
  "functions": {
    "apps/*/pages/api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "builds": [
    {
      "src": "apps/*/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/crypto/(.*)",
      "dest": "/apps/crypto-analyzer/api/crypto/$1"
    },
    {
      "src": "/api/titanic/(.*)",
      "dest": "/apps/titanic-analyzer/api/titanic/$1"
    },
    {
      "src": "/api/classify",
      "dest": "/apps/image-classifier/api/classify"
    },
    {
      "src": "/apps/crypto-analyzer/(.*)",
      "dest": "/apps/crypto-analyzer/$1"
    },
    {
      "src": "/apps/image-classifier/(.*)",
      "dest": "/apps/image-classifier/$1"
    },
    {
      "src": "/apps/titanic-analyzer/(.*)",
      "dest": "/apps/titanic-analyzer/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/crypto-analyzer/$1"
    }
  ]
}
